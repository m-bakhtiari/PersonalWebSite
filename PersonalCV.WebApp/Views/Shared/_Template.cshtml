@model TemplatePaging

<form method="get" action="/TemplateGroups/GetAllByPaging">
    <section id="template" class="portfolio section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Templates</h2>
                <p>@Model.TemplateText</p>
            </div>

            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">

                    @if (ViewBag.IsAllSelected == "true")
                    {
                        <input onclick="LoadTemplate(null,null)" value="همه" type="button" class="btn btn-outline-primary me-2 active fw-bold">
                    }
                    else
                    {
                        <input onclick="LoadTemplate(null,null)" value="همه" type="button" class="btn btn-outline-primary me-2 fw-bold">
                    }
                    @foreach (var group in Model.TemplateGroups)
                    {
                        @if (ViewBag.IsAllSelected == "true")
                        {
                            <input onclick="LoadTemplate(@group.Id,null)" value="@group.Title" type="button" class="btn btn-outline-primary me-2 fw-bold" />
                        }
                        else
                        {
                            @if (Model.Templates.Any())
                            {
                                <input onclick="LoadTemplate(@group.Id, null)" value="@group.Title" type="button" class="btn btn-outline-primary fw-bold me-2 @(group.Id == Model.Templates?.FirstOrDefault().GroupId ? "active" : "")">
                            }
                            else
                            {
                                <input onclick="LoadTemplate(@group.Id,null)" value="@group.Title" type="button" class="btn btn-outline-primary me-2 fw-bold" />
                            }
                        }
                    }
                </div>
            </div>
            <br />
            @foreach (var template in Model.Templates)
            {
                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">

                    <a href="toplearn.com" target="_blank">
                        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img src="assets/img/template/@template.MainImage" class="img-fluid" alt="">
                                <div class="portfolio-links">
                                    <p class="portfolio-lightbox" title="@template.Title">@template.Title</p>
                                </div>
                                <p class="text-center fw-bold text-dark">@template.Title</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <input onclick="LoadTemplate(null,@i)" value="@i" type="button" class="btn btn-outline-primary me-2 @(Model.PageId==i?"active":"")" />
                    }
                </div>
            </div>
        </div>
    </section>

</form>