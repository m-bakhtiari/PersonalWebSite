@model HomePageViewModel

@{
    ViewData["Title"] = "صفحه اصلی";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="hero-container" data-aos="fade-in">
        <h1>Mohammadreza Bakhtiari</h1>
        <p>I'm <span class="typed" data-typed-items="Backend Developer , Frontend Developer , Freelancer"></span></p>
    </div>
</section><!-- End Hero -->

<main id="main">
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">
            <div class="section-title">
                <h2>About</h2>
                <p>@Model.AboutText</p>
            </div>
            <div class="row">
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="assets/img/@Model.HeaderMyPhoto" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>@Model.AboutTitle</h3>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.BirthDay</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Model.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@Model.FreeLanceText</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Facts Section ======= -->
    <section id="facts" class="facts">
        <div class="container">

            <div class="section-title">
                <h2>Facts</h2>
                <p>@Model.FactsText</p>
            </div>

            <div class="row no-gutters">

                <div class="col-lg-3 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up">
                    <div class="count-box">
                        <i class="bi bi-emoji-smile"></i>
                        <span>@Model.CountOfCustomers</span>
                        <p><strong>Happy Clients</strong> that work with me</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="count-box">
                        <i class="bi bi-journal-richtext"></i>
                        <span>@Model.CountOfTestProjects</span>
                        <p><strong>Projects</strong> that do for test</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up" data-aos-delay="200">
                    <div class="count-box">
                        <i class="bi bi-headset"></i>
                        <span>@Model.CountOfPublishedProjects</span>
                        <p><strong>Projects</strong> that published</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-md-flex align-items-md-stretch" data-aos="fade-up" data-aos-delay="300">
                    <div class="count-box">
                        <i class="bi bi-people"></i>
                        <span>@Model.CountOfPublishedProjects</span>
                        <p><strong>Years</strong> experience as team and freelancer</p>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Facts Section -->
    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Skills</h2>
                <p>@Model.SkillsText</p>
            </div>

            @foreach (var skill in Model.Skills)
            {
                <div class="row skills-content">
                    <h2>@skill.Title</h2>
                    <div class="col-lg-6" data-aos="fade-up">

                        @foreach (var detail in skill.SkillDetails)
                        {
                            <div class="progress">
                                <span class="skill">@detail.Title<i class="val">@detail.Percent%</i></span>
                                <div class="progress-bar-wrap">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="@detail.Percent" aria-valuemin="0" aria-valuemax="@detail.Percent"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </section><!-- End Skills Section -->
    <!-- ======= Resume Section ======= -->
    <section id="resume" class="resume">
        <div class="container">

            <div class="section-title">
                <h2>Resume</h2>
                <p>@Model.ResumeText</p>
            </div>

            <div class="row">
                <div class="col-lg-6" data-aos="fade-up">
                    <h3 class="resume-title">Sumary</h3>
                    <div class="resume-item pb-0">
                        <h4>Mohammadreza Bakhtiari</h4>
                        <p><em>@Model.BiographySummaryText</em></p>
                        <ul>
                            <li>@Model.City</li>
                            <li>@Model.Phone</li>
                            <li>@Model.Email</li>
                        </ul>
                    </div>

                    <h3 class="resume-title">Education</h3>
                    <div class="resume-item">
                        <h4>@Model.EducationFirstTitle</h4>
                        <h5>@Model.EducationFirstYear</h5>
                        <p><em>@Model.EducationFirstAddress</em></p>
                    </div>
                    <div class="resume-item">
                        <h4>@Model.EducationSecondTitle</h4>
                        <h5>@Model.EducationSecondYear</h5>
                        <p><em>@Model.EducationSecondAddress</em></p>
                    </div>
                </div>
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <h3 class="resume-title">Professional Experience</h3>
                    <div class="resume-item">
                        <h4>@Model.JobFirstTitle</h4>
                        <h5>@Model.JobFirstYear</h5>
                        <p><em>@Model.JobFirstAddress</em></p>
                        <ul>
                            <li>@Model.JobFirstDescription1</li>
                            <li>@Model.JobFirstDescription2</li>
                            <li>@Model.JobFirstDescription3</li>
                        </ul>
                    </div>
                    <div class="resume-item">
                        <h4>@Model.JobSecondTitle</h4>
                        <h5>@Model.JobSecondYear</h5>
                        <p><em>@Model.JobSecondAddress</em></p>
                        <ul>
                            <li>@Model.JobSecondDescription1</li>
                            <li>@Model.JobSecondDescription2</li>
                            <li>@Model.JobSecondDescription3</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End Resume Section -->
    <!-- ======= Github Section ======= -->

    <section id="github" class="portfolio section-bg">

        <div class="container">
            <div class="section-title">
                <h2>Github</h2>
                <p>@Model.GithubText</p>
                <a href="@Model.GithubUrl">@Model.GithubUrl</a>
            </div>
        </div>

    </section>

    <!-- End Github Section -->
    <div id="templatePartial">
        <partial name="_Template" model="@Model.TemplateViewModel" />
    </div>
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>Contact</h2>
                <p>@Model.ContactText</p>
            </div>

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>@Model.City</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>@Model.Email</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Call:</h4>
                            <p>@Model.Phone</p>
                        </div>

                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                    </div>

                </div>
                <partial name="_ContactForm" model="@Model.Contact" />
            </div>

        </div>
    </section><!-- End Contact Section -->
</main><!-- End #main -->
<!-- ======= Footer ======= -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    function LoadTemplate(groupId, pageId) {
        $.ajax({
            type: "GET",
            url: "/Home/GetTemplateGroups?groupId=" + groupId + "&&pageId=" + pageId
        }).done(function (data, statusText, xhdr) {
            console.log("Done");
            $("#templatePartial").after(data);
        }).fail(function (xhdr, statusText, errorText) {
            console.log("Failed");
        });
    }
</script>
