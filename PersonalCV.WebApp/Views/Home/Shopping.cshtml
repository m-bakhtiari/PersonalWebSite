
@model ShoppingViewModel

@{
    Layout = "_Layout";
}

<header>
    <div class="profile-page sidebar-collapse">
        <nav class="navbar navbar-expand-lg fixed-top navbar-transparent bg-primary" color-on-scroll="400">
            <div class="container">
                <div class="navbar-translate" style="direction: ltr !important">
                    <a class="navbar-brand" href="#" rel="tooltip">محمدرضا بختیاری</a>
                    <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-bar bar1"></span><span class="navbar-toggler-bar bar2"></span><span class="navbar-toggler-bar bar3"></span></button>
                </div>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link smooth-scroll" href="#profile">پروفایل</a></li>
                        <li class="nav-item"><a class="nav-link smooth-scroll" href="#portfolio">قالب های سایت</a></li>
                        <li class="nav-item"><a class="nav-link smooth-scroll" href="#pricing">هاست</a></li>
                        <li class="nav-item"><a class="nav-link smooth-scroll" href="#domain">دامین</a></li>
                        <li class="nav-item"><a class="nav-link smooth-scroll" href="#contact">ارسال پیام</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>

<div class="page-content">
    <div>
        <div id="profile" class="profile-page">
            <div class="wrapper">
                <div class="page-header page-header-small" filter-color="green">
                    <div class="page-header-image" data-parallax="true" style="background-image: url('images/profile/@Model.HeaderPhoto')"></div>
                    <div class="container">
                        <div class="content-center">
                            <div class="cc-profile-image"><a href="/"><img src="images/profile/@Model.ProfilePhoto" alt="Image" /></a></div>
                            <div class="h2 title">محمدرضا بختیاری</div>
                            <p class="category text-white">برنامه نویس بک اند ، فرانت اند و فول استک</p>
                            <a class="btn btn-primary smooth-scroll mr-2" href="#contact" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">سفارش پروژه</a>
                            <a class="btn btn-primary" href="/download" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">دانلود رزومه</a>
                        </div>
                    </div>
                    <div class="section">
                        <div class="container">
                            <div class="button-container">
                                <a class="btn btn-danger btn-round btn-lg btn-icon" href="@Model.InstagramUrl" rel="tooltip" title="Follow me on Instagram">
                                    <i class="fa fa-instagram" style="font-size: 35px"></i>
                                </a>
                                <a class="btn btn-primary btn-round btn-lg btn-icon" href="@Model.TelegramUrl" rel="tooltip" title="Follow me on Telegram">
                                    <i class="fa fa-telegram" style="font-size: 35px"></i>
                                </a>
                                <a class="btn btn-default btn-round btn-lg btn-icon" href="@Model.LinkedIn" rel="tooltip" title="Follow me on LinkedIn">
                                    <i class="fa fa-linkedin" style="font-size: 35px"></i>
                                </a>
                                <a class="btn btn-warning btn-round btn-lg btn-icon" href="@Model.Email" rel="tooltip" title="Contact me on Email">
                                    <i class="fa fa-google" style="font-size: 35px"></i>
                                </a>
                                <a class="btn btn-success btn-round btn-lg btn-icon " href="@Model.WhatsappUrl" rel="tooltip" title="See me on whatsapp">
                                    <i class="fa fa-whatsapp" style="font-size: 35px"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section" id="portfolio">
            <partial name="_Template" model="@Model.TemplatePaging" />
        </div>
        <div id="pricing" class="container-fluid">
            <div class="container">
                <div>
                    <div class="col-xs-12 row-title">
                        <h4>پلن های هاست</h4>
                        <h5>متناسب با سایت خود یکی از پلن های زیر را انتخاب نمایید</h5>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.HostPlans)
                    {
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="plan-box">
                                <div class="plan-box-header color-bg1">
                                    <div class="plan-title h3">@item.Title</div>
                                </div>
                                <div class="plan-box-content">
                                    <ul class="c-list">
                                        @foreach (var des in item.Description.Split("-"))
                                        {
                                            @if (string.IsNullOrWhiteSpace(des) == false)
                                            {

                                        <li class="c-item"><i class="fa fa-check" aria-hidden="true"></i><span class="pr-1">سثبثسب سثب</span></li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="plan-box-button">
                                    <a class="color-bg1"></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div id="domain">
            <section class="calltoaction section_sapce cover-image" style="background-color: black">
                <div class="row row-search">
                    <div class="container">
                        <div class="col-sm-12 col-md-8 center-block">
                            <div class="row no-gutter cta-content row-search">
                                <div class="offerdescription">
                                    <h2 class="text-uppercase  text-center">Hosting with FREE domain. </h2>
                                    <p class=" text-center">We are Providing Free Domain for every month new extentions.</p>
                                </div>
                            </div>
                            <form class="form-inline domainsearch" method="post" action="#">
                                <div class="row no-gutter row-search">
                                    <div class="col-sm-8 bg-white">
                                        <input type="text" class="form-control" name="sld" onfocus="if (this.value == 'Enter your domain') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Enter your domain';}" value="Enter your domain">
                                    </div>
                                    <div class="col-sm-2 bg-white mt-2">
                                        <select name="tld" class="form-control">
                                            <option>.com</option>
                                            <option>.net</option>
                                            <option>.org</option>
                                            <option>.eu</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <button type="submit" class="btn btn-new" style="width:100%">SEARCH</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

        </div>
        <div class="section" id="contact">
            <div class="cc-contact-information" style="background-image: url('~/images/profile/@Model.MapPhoto')">
                <partial name="_ContactForm" model="@Model.Contact" />
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="container text-center">
        <a class="btn-link text-success" href="@Model.WhatsappUrl">
            <i class="fa fa-whatsapp fa-2x " aria-hidden="true"></i>
        </a>
        <a class="btn-link " href="@Model.LinkedIn">
            <i class="fa fa-linkedin fa-2x " aria-hidden="true"></i>
        </a>
        <a class="btn-link text-warning" href="@Model.Email">
            <i class="fa fa-google-plus fa-2x" aria-hidden="true"></i>
        </a>
        <a class="btn-link text-danger" href="@Model.InstagramUrl">
            <i class="fa fa-instagram fa-2x " aria-hidden="true"></i>
        </a>
        <a class="btn-link text-primary" href="@Model.TelegramUrl">
            <i class="fa fa-telegram fa-2x " aria-hidden="true"></i>
        </a>
    </div>
    <div class="h4 title text-center">محمدرضا بختیاری</div>
    <div class="text-center text-muted">
        <p>
            تمامی حقوق مادی و معنوی این سایت متعلق به
            <a href="/">محمدرضا بختیاری</a>
            می باشد و هرگونه کپی برداری غیرقانونی محسوب خواهد شد
        </p>
    </div>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    function LoadTemplate(groupId, pageId) {
        $.ajax({
            type: "GET",
            url: "/Home/GetTemplateGroups?groupId=" + groupId + "&&pageId=" + pageId
        }).done(function (data, statusText, xhdr) {
            $("#portfolio").html(data);
        }).fail(function (xhdr, statusText, errorText) {
        });
    }
</script>