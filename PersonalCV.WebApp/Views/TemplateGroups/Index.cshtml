@model IEnumerable<PersonalCV.Core.Entities.TemplateGroup>

@{
    ViewData["Title"] = "Index";
}

<main id="main">
<section class="container">
    <h1>گروه بندی قالب ها</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                عنوان
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</section>
</main>
